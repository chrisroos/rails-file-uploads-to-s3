<%= form_tag s3_host, multipart: true, authenticity_token: false %>
  <%= hidden_field_tag :key, key %>
  <%= hidden_field_tag :AWSAccessKeyId, aws_access_key_id %>
  <%= hidden_field_tag :acl, acl %>
  <%= hidden_field_tag :policy, policy %>
  <%= hidden_field_tag :signature, signature %>
  <%= hidden_field_tag :success_action_redirect, success_action_redirect %>

  <div>
    <%= label_tag :file, 'File to upload to S3' %><br/>
    <%= file_field_tag :file %>
  </div>

  <div>
    <%= submit_tag 'Upload' %>
  </div>
</form>
